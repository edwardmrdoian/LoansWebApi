<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="logs/nlog-internal.log"
      throwExceptions="false">

  <extensions>
    <add assembly="NLog.Extensions.Logging" />
    <add assembly="NLog.Database" />
  </extensions>

  <targets>
    <target xsi:type="File" name="logfile"
            fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate}|${uppercase:${level}}|${logger}|${message}|${exception:format=ToString}" />

    <target xsi:type="Database" name="db"
            connectionString="${configsetting:name=ConnectionStrings.sqlConnection}"
            keepConnection="false"
            commandText="INSERT INTO Logs (Logged, Level, Logger, Message, Exception)
                          VALUES (@logged, @level, @logger, @message, @exception)">
      <parameter name="@logged" layout="${date}" />
      <parameter name="@level" layout="${level}" />
      <parameter name="@logger" layout="${logger}" />
      <parameter name="@message" layout="${message}" />
      <parameter name="@exception" layout="${exception:format=ToString}" />
    </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="logfile,db" />
  </rules>
</nlog>
